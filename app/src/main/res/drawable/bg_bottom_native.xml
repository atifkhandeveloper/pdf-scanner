<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Soft gradient similar to your PNG -->
    <gradient
        android:startColor="#D9DCEFFF"
        android:centerColor="#EDEDED"
        android:endColor="#D9DCEFFF"
        android:angle="0" />

    <!-- Rounded corners -->
    <corners android:radius="40dp" />

    <!-- Optional subtle inner padding -->
    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp" />

    <!-- Optional shadow-like elevation effect -->
    <stroke
        android:width="1dp"
        android:color="#80FFFFFF" />
</shape>
