<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="15dp" android:layout_marginRight="15dp">
    <TextView android:textColor="#aa000000" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:text="Enter file name"/>
    <EditText android:id="@+id/input_name_pdf" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp"/>
    <TextView android:textColor="#aa000000" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="Page Size"/>
    <Spinner android:gravity="start" android:id="@+id/page_size_spinner" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp"/>
    <TextView android:textColor="#aa000000" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="Scale of Image"/>
    <Spinner android:gravity="left" android:id="@+id/image_scale_spinner" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp"/>
</LinearLayout>
